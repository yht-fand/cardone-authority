<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 授权消费 -->
    <bean id="top.cardone.authority.dao.OauthConsumerDao"
          class="top.cardone.authority.dao.impl.OauthConsumerDaoImpl">
        <property name="configTable">
            <map>
                <entry key="config">
                    <map>
                        <entry key="sqlFileRoot" value="/cardone/authority/oAuthConsumer/"/>
                        <entry key="pks" value="oauthConsumerId"/>
                        <entry key="codes" value="systemInfoCode,siteCode,clientSecret,endDate"/>
                    </map>
                </entry>
                <entry key="insert">
                    <map>
                        <entry key="oauthConsumerId" value="readRandomUUIDFunc"/>
                        <entry key="createdByCode" value="readPrincipalFunc"/>
                        <entry key="createdDate" value="readOneDateFunc"/>
                        <entry key="beginDate" value="readOneDateFunc"/>
                        <entry key="endDate" value="endDateDefaultValueFunc"/>
                        <entry key="systemInfoCode" value="systemInfoCodeDefaultValueFunc"/>
                        <entry key="siteCode" value="siteCodeDefaultValueFunc"/>
                    </map>
                </entry>
                <entry key="update">
                    <map>
                        <entry key="lastModifiedByCode" value="readPrincipalFunc"/>
                        <entry key="lastModifiedDate" value="readOneDateFunc"/>
                        <entry key="endDate" value="endDateDefaultValueFunc"/>
                        <entry key="systemInfoCode" value="systemInfoCodeDefaultValueFunc"/>
                        <entry key="siteCode" value="siteCodeDefaultValueFunc"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>
	
    <bean id="top.cardone.authority.service.OauthConsumerService"
          class="top.cardone.authority.service.impl.OauthConsumerServiceImpl">
		<property name="dao" ref="top.cardone.authority.dao.OauthConsumerDao"/>
	</bean>
</beans>