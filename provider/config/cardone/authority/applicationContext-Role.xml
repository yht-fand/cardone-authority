<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 角色 -->
    <bean id="top.cardone.authority.dao.RoleDao"
          class="top.cardone.authority.dao.impl.RoleDaoImpl">
        <property name="configTable">
            <map>
                <entry key="config">
                    <map>
                        <entry key="sqlFileRoot" value="/cardone/authority/role/"/>
                        <entry key="pks" value="roleId"/>
                        <entry key="codes" value="roleId"/>
                    </map>
                </entry>
                <entry key="insert">
                    <map>
                        <entry key="roleId" value="getRandomUUIDFunc"/>
                        <entry key="createdByCode" value="readCreatedByCodeFunc"/>
                        <entry key="createdDate" value="readCreatedDateFunc"/>
                    </map>
                </entry>
                <entry key="update">
                    <map>
                        <entry key="lastModifiedByCode" value="readLastModifiedByCodeFunc"/>
                        <entry key="lastModifiedDate" value="readLastModifiedDateFunc"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <!-- 角色 -->
    <bean id="top.cardone.authority.service.RoleService"
          class="top.cardone.authority.service.impl.RoleServiceImpl">
        <property name="dao" ref="top.cardone.authority.dao.RoleDao"/>
    </bean>

    <bean parent="messageListenerContainerParnet">
        <property name="messageListener">
            <bean  parent="exceptionParnet">
                <property name="serviceInterface" value="top.cardone.authority.service.RoleService"/>
                <property name="service" ref="top.cardone.authority.service.RoleService"/>
            </bean>
        </property>
        <property name="destination">
            <bean class="org.apache.activemq.command.ActiveMQQueue">
                <constructor-arg value="cardone-authority-${cardone-authority-version}:top.cardone.authority.service.RoleService"/>
            </bean>
        </property>
    </bean>
</beans>